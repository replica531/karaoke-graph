= form_for @result, url: user_music_results_path do |f|
  - if @result.errors.any?
    #error_explanation
      %h2= "#{pluralize(@result.errors.count, "error")} prohibited this result from being saved:"
      %ul
        - @result.errors.full_messages.each do |message|
          %li= message
  .row
    .col-md-3.col-form-label 得点
    .col-md-9= f.number_field :score, value: 80, min: 0, max: 100, step: "0.001", class: 'form-control'
  .row
    .col-md-3.col-form-label メモ
    .col-md-9= f.text_area :memo, class: 'form-control'
  .row
    .col-md-3.col-form-label 歌唱日時
    .col-md-9= f.datetime_select :datetime, use_month_numbers: true, class: 'form-select'
  .row
    .col-md-9= f.hidden_field :music_id, value: params[:music_id], class: 'form-control'
  .actions.pt-3
    = f.submit yield(:button_text), class: 'btn btn-primary w-100'

%header
  %nav.navbar.navbar-expand-md.navbar-dark.bg-dark.fixed-top
    .container
      = link_to root_path, class: 'navbar-brand', id: 'logo' do
        %h1 Karaoke Graph
      %button.navbar-toggler{"aria-controls" => "navbarSupportedContent", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-bs-target" => "#navbarSupportedContent", "data-bs-toggle" => "collapse", :type => "button"}
        %span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse
        %ul.navbar-nav.ms-auto
          - if logged_in?
            .dropdown
              %a#navbarNavDarkDropdown.btn.btn-info.dropdown-toggle{"aria-expanded" => "false", "data-bs-toggle" => "dropdown", :href => "#", :role => "button"}
                Account
              %ul.dropdown-menu{"aria-labelledby" => "dropdownMenuLink"}
                %li
                  %a.dropdown-item{:href => user_path(current_user)} Profile
                %li
                  %a.dropdown-item{:href => edit_user_path(current_user)} Settings
                %li.dropdown-divider
                %li.dropdown-item
                  = link_to "Log out", logout_path, method: :delete
          - else
            %li.nav-item
              .btn.btn-lg= link_to '登録', signup_path, class: 'nav-link text-white'
            %li.nav-item
              .btn.btn-lg= link_to 'ログイン', login_path, class: 'nav-link text-white'

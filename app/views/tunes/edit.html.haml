- provide(:title, "Tune")
- breadcrumb :tune_edit, @tune
%h5= breadcrumbs separator: " &rsaquo; "
%h1.title 曲情報編集
= form_with model: @tune, url: user_tune_path(@tune) do |f|
  - if @tune.errors.any?
    #error_explanation
      %h2= "#{pluralize(@tune.errors.count, "error")} prohibited this tune from being saved:"
      %ul
        - @tune.errors.full_messages.each do |message|
          %li= message
  .row
    .col-md-3.col-form-label 曲名
    .col-md-9= f.text_field :title, class: 'form-control'
  .row.mt-3
    .col-md-3.col-form-label アーティスト
    .col-md-9
      = f.text_field :artist, list: 'artists', class: 'form-control'
      %datalist#artists
        - @artists.each do |artist|
          %option{value: artist}
  .row.mt-3
    .col-md-3.col-form-label お気に入り
    .col-md-9= f.check_box :favorite
  .row.mt-3
    .col-md-3.col-form-label キー
    .col-md-9= f.select :key, [*-7..7].reverse, {value: 0}, class: 'form-control'
  .row.mt-3
    .col-md-3.col-form-label メモ
    .col-md-9= f.text_area :memo, rows: "10", class: 'form-control'
  .actions.pt-3
    = f.submit '更新', class: 'btn btn-dark w-100'


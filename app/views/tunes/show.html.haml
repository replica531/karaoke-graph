- provide(:title, "Tune")
%p#notice= notice
- breadcrumb :tune, @tune
%h5= breadcrumbs separator: " &rsaquo; "
%h1.text-center.title
  -if @tune.favorite
    %i.bi.bi-star-fill
  #{@tune.title}
%h3.text-center
   アーティスト: #{@tune.artist}
   = link_to '歌詞検索', "http://www.google.co.jp/search?q=#{@tune.title}+#{@tune.artist}+歌詞", target: :_blank, class: 'btn btn-dark text-white'
%h3.text-center キー: #{@tune.key}
.container.mx-auto.text-center
  %h3.text-center メモ
  %h3.d-inline-block.text-left
    = simple_format @tune.memo
%h3.text-center 平均点: #{@tune.average_score}
= line_chart @results.map{|r|[r[:datetime].strftime("%F %H:%M"),r[:score]]}, xtitle: "歌唱日時", ytitle: "Score", min: @y_min, max: @y_max, curve: false, discrete: true
.row
  .col-6= link_to '曲情報編集', edit_user_tune_path(id: @tune.id), class: 'btn btn-sm btn-secondary text-white w-100'
  .col-6= link_to '曲削除', user_tune_path(id: @tune.id), method: :delete, data: { confirm: '本当に削除してよろしいですか?' }, class: 'btn btn-sm btn-danger text-white w-100'
.row.mt-2
  .col-12= link_to '記録一覧', user_tune_results_path(tune_id: @tune.id), class: 'btn btn-dark text-white w-100'
